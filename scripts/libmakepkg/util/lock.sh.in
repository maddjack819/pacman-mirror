is_pacman_locked() {
	local lockfile="$(pacman-conf DBPath)/db.lck"
	if [[ -f $lockfile ]]; then
		local pid=$(<"$lockfile")
		# Check if the pid is valid and the process is still running
		if [[ -n $pid && $pid =~ ^[0-9]+$ && -d /proc/$pid ]]; then
			return 0
		fi
	fi
	return 1
}